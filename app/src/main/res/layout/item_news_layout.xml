<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingEnd="@dimen/large_horizontal_margin_15"
    android:paddingStart="@dimen/large_horizontal_margin_15"
    android:paddingTop="18dp"
    android:paddingBottom="@dimen/medium_vertical_margin"
    android:layout_marginTop="@dimen/big_large_vertical_margin"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_marginBottom="@dimen/medium_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/text_1"
            android:layout_alignParentStart="true"
            app:roundedCornerRadius="2.5dp" />

        <TextView
            android:id="@+id/text_1"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/white"
            tools:text="alsdfjasl;kdfjklas;dfjo;asdfjkl"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingRight="@dimen/large_horizontal_margin"
            android:paddingTop="@dimen/large_vertical_margin"
            android:paddingBottom="@dimen/large_vertical_margin"
            android:background="@color/black_alpha_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/color_default_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <RelativeLayout
        android:id="@+id/rl2"
        android:paddingTop="@dimen/large_vertical_margin"
        android:paddingBottom="@dimen/large_vertical_margin"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_2"
            android:layout_width="80dp"
            app:roundedCornerRadius="2.5dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text_2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/img_2"
            android:minLines="2"
            android:maxLines="2"
            tools:text="1231231231231233a333"
            android:textSize="@dimen/medium_text_size" />

    </RelativeLayout>

    <View
        android:background="@color/color_default_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/rl3"
        android:paddingTop="@dimen/large_vertical_margin"
        android:paddingBottom="@dimen/large_vertical_margin"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_3"
            android:layout_width="80dp"
            app:roundedCornerRadius="2.5dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/img_3"
            android:minLines="2"
            android:maxLines="2"
            tools:text="123123123123123333333as1231231233333333333333333333333333333dfa333"
            android:textSize="@dimen/medium_text_size" />

    </RelativeLayout>

    <View
        android:background="@color/color_default_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/rl4"
        android:paddingTop="@dimen/large_vertical_margin"
        android:paddingBottom="@dimen/large_vertical_margin"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_4"
            android:layout_width="80dp"
            app:roundedCornerRadius="2.5dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/img_4"
            android:minLines="2"
            android:maxLines="2"
            android:gravity="center_vertical"
            tools:text="123123123123123333333as1231231233333333333333333333333333333dfa333"
            android:textSize="@dimen/medium_text_size" />

    </RelativeLayout>
</LinearLayout>