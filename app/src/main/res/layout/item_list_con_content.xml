<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/item_content1"
            android:layout_width="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/gray_m"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            tools:text="123123123123123"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_content2"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:gravity="center"
            tools:text="1231"
            android:textColor="@color/gray_m"
            android:textSize="@dimen/medium_text_size"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_content3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            tools:text="6"
            android:layout_marginEnd="18dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/gray_m"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/item_content3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_list_sgt_img" />

    </RelativeLayout>

    <include layout="@layout/item_line_view_layout"/>

</LinearLayout>