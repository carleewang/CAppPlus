<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="27"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="28dp"/>

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            tools:text="2017.16"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/change_tag"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                tools:src="@mipmap/logo" />

            <TextView
                android:id="@+id/image_type"
                android:paddingLeft="@dimen/medium_horizontal_margin"
                android:paddingTop="@dimen/big_large_vertical_margin"
                android:paddingRight="@dimen/medium_horizontal_margin"
                android:paddingBottom="@dimen/big_large_vertical_margin"
                android:layout_above="@id/remark"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                tools:text="12124123"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/change_tag"
                android:layout_width="45dp"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_above="@id/remark"
                android:scaleType="fitCenter"
                android:layout_toRightOf="@+id/image_type"
                android:paddingBottom="@dimen/big_large_vertical_margin"
                android:paddingLeft="@dimen/medium_horizontal_margin"
                android:paddingRight="@dimen/big_large_vertical_margin"
                android:paddingTop="@dimen/big_large_vertical_margin"
                android:text="重新拍照"
                android:src="@mipmap/ic_foot_image_change_tag" />

            <TextView
                android:id="@+id/remark"
                android:layout_alignParentBottom="true"
                tools:text="123212412512342342342342342342342342234234234315412314131"
                android:paddingLeft="@dimen/medium_horizontal_margin"
                android:paddingRight="@dimen/medium_horizontal_margin"
                android:paddingBottom="@dimen/medium_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_m"/>

        </RelativeLayout>

</LinearLayout>