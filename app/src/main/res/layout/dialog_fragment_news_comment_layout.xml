<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_default_bg"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <EditText
        android:id="@+id/content"
        android:background="@drawable/shape_solid_white_radius_0_stroke_cccccc"
        android:maxLines="6"
        android:minLines="6"
        android:gravity="left"
        android:padding="@dimen/medium_vertical_margin"
        android:textSize="@dimen/medium_text_size"
        android:layout_margin="@dimen/big_large_horizontal_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/big_large_horizontal_margin"
        android:layout_marginBottom="@dimen/medium_vertical_margin"
        android:textSize="@dimen/medium_text_size"
        android:text="发表"
        android:paddingTop="@dimen/small_vertical_margin"
        android:paddingBottom="@dimen/small_vertical_margin"
        android:paddingLeft="@dimen/big_large_horizontal_margin"
        android:paddingRight="@dimen/big_large_horizontal_margin"
        android:background="@drawable/shape_solid_white_radius_100_stroke_cccccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>