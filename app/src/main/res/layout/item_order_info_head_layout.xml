    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgNeedInVoice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/img_choose_is_bind_order_selector"
                android:gravity="center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvSelectVoice"
                android:paddingTop="10dp"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/black"
                android:text="选择发票信息"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/icon_right"
                app:srcCompat="@mipmap/ic_info_r"
                android:layout_alignParentRight="true"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_order_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_blue"
                android:paddingLeft="@dimen/dp_5"
                android:text="我已阅读并同意"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/tv_order_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="《中鸽网支付协议》"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/medium_text_size" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/color_default_bg"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="24dp"
        android:text="支付方式"
        android:textColor="@color/textColor_gray"
        android:textSize="@dimen/medium_text_size"
        android:visibility="gone" />

</LinearLayout>