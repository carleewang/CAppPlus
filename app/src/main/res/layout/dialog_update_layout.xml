<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_update_title"/>

    <ImageView
        android:id="@+id/close"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_2"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_find_new_version"
            android:layout_width="100dp"
            android:layout_height="21dp" />
        
        <TextView
            android:id="@+id/n_version"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/large_horizontal_margin"
            android:layout_toRightOf="@+id/img_2"
            android:layout_width="wrap_content"
            tools:text="1.2.3"
            android:textColor="#317fc9"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <TextView
        android:id="@+id/c_version"
        android:textSize="@dimen/medium_text_size"
        android:layout_below="@id/rl_1"
        android:textColor="@color/color_text_b3b3b3"
        tools:text="当前版本：1.1.2"
        android:layout_marginLeft="@dimen/large_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time"
        android:textSize="@dimen/medium_text_size"
        android:layout_below="@id/rl_1"
        android:textColor="@color/color_text_b3b3b3"
        tools:text="当前版本：1.1.2"
        android:layout_marginRight="@dimen/large_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/large_horizontal_margin"
        android:layout_marginRight="@dimen/large_horizontal_margin"
        android:textSize="@dimen/medium_text_size"
        android:layout_below="@id/time"
        android:layout_marginBottom="23dp"
        android:textColor="@color/text_color_4d4d4d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn"
        android:layout_below="@id/content"
        android:textSize="15dp"
        android:background="@drawable/shape_solid_317fc9_radius_5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:text="立即更新"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

</RelativeLayout>