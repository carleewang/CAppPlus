<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/time_line_top"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/time_zhou_btm"/>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="27"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="28dp"/>

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            tools:text="2017.16"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            tools:text="12:01:12"/>

        <ImageView
            android:id="@+id/time_line_btm"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@mipmap/time_zhou_top"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        app:cardElevation="0dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                tools:src="@mipmap/logo"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/tag"
                android:paddingLeft="@dimen/medium_horizontal_margin"
                android:paddingTop="@dimen/big_large_vertical_margin"
                android:paddingRight="@dimen/medium_horizontal_margin"
                android:paddingBottom="@dimen/big_large_vertical_margin"
                android:layout_below="@+id/image"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                tools:text="12124123"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>