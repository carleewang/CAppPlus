<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="0dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/aciv_item_expand"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                app:srcCompat="@drawable/ic_arrow_down" />

            <TextView
                android:id="@+id/tv_item_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无监控"
                android:textColor="#ff3a3a" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_orgname"
            style="@style/Marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layout_item_status"
            android:paddingLeft="4dp"
            android:text="登录31254564564564564654654898456489465456498486"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>
</android.support.v7.widget.CardView>