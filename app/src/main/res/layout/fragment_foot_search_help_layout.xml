<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/bg_color_fafafa"
        android:layout_height="58dp">

        <TextView
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/ic_foot_delete"
            android:textColor="@color/gray_m"
            android:text="清除历史记录"/>
    </RelativeLayout>




    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_foot_search_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_below="@id/icon"
        android:layout_marginLeft="@dimen/large_horizontal_margin_15"
        android:layout_marginRight="@dimen/large_horizontal_margin_15"
        android:layout_above="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>