<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/large_horizontal_margin_15"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cpigeon.app.view.LineTextView
                app:line_text_title="参赛时间"
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cpigeon.app.view.LineTextView
                android:id="@+id/entity_name"
                app:line_text_title="项目名称"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cpigeon.app.view.LineTextView
                android:id="@+id/rank"
                app:line_text_title="比赛名次"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cpigeon.app.view.LineTextView
                android:id="@+id/displacement"
                app:line_text_title="比赛空距"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cpigeon.app.view.LineTextView
                android:id="@+id/pigeon_number"
                app:line_text_title="参赛羽数"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cpigeon.app.view.LineTextView
                android:id="@+id/speed"
                app:line_text_title="分速"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cpigeon.app.view.LineTextView
                android:id="@+id/first_speed"
                app:line_text_title="第一名分速"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/order"
        android:layout_alignParentRight="true"
        tools:text="1"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_ovel_solid_gray"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>

